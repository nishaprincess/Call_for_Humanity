<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back11">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_donate"

    android:layout_width="match_parent"
    android:layout_height="800dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.click_for_help.click_help_1.Donate">






    <TextView
        android:text="My Donation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:id="@+id/textView5"
        android:layout_marginLeft="45dp"
        android:textStyle="normal|bold|italic"
        android:textSize="36sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"

        android:layout_marginTop="30dp"
        android:id="@+id/textView6"
        android:textSize="24sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Activity name"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <TextView
        android:text="activity name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:id="@+id/activity_name_donate"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="My Payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/activity_name_donate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <RadioButton
        android:text="Visa"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/visa" />

    <RadioButton
        android:text="BKash"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/bkash" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:background="@drawable/edit_outline"
        android:padding="10dp"
        android:ems="10"
        android:id="@+id/payment_amount"
        android:hint="Payment Amount" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:background="@drawable/edit_outline"
        android:padding="10dp"
        android:ems="10"
        android:id="@+id/visa_number"
        android:hint="If Visa then Enter your Card Number" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:background="@drawable/edit_outline"
        android:padding="10dp"
        android:ems="10"
        android:id="@+id/mobile_number"
        android:hint="If BKash then Enter your Mobile Number" />

    <Button
        android:text="I CONFIRM MY DONATION"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:textSize="22sp"
        android:background="@drawable/input_outline"
        android:layout_height="wrap_content"
        android:id="@+id/confirm_donation" />

</LinearLayout>
</ScrollView>